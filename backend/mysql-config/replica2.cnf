[mysqld]
# Server identification - MUST BE UNIQUE
server-id = 2

# Binary logging - needed so this replica can become a master
log-bin = mysql-bin
binlog_format = ROW
log_slave_updates = ON

# GTID for replication
gtid_mode = ON
enforce_gtid_consistency = ON

# Relay log for replication
relay-log = relay-bin
relay_log_recovery = ON
relay_log_purge = ON

# Replication settings
sync_relay_log = 1
slave_parallel_workers = 4
slave_parallel_type = LOGICAL_CLOCK

# Performance schema
performance_schema = ON

# General settings
max_connections = 200

# Allow connections
bind-address = 0.0.0.0
